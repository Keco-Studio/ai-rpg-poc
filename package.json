{
  "name": "ai-rpg-maker",
  "version": "0.1.0",
  "private": true,
  "description": "Browser-based 2D pixel RPG maker with schema validation and Excalibur runtime",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "dev": "npm run dev --workspace=packages/runtime",
    "demo:ai": "npm run demo --workspace=examples/ai-demo"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
